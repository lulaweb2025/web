datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Producto {
  id          String    @id @default(cuid())
  nombre      String
  descripcion String
  precio      Float
  stock       Int       @default(0)
  categoria   String
  imagenes    String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relaciones
  relacionados    Producto[] @relation("ProductosRelacionados")
  relacionadoCon  Producto[] @relation("ProductosRelacionados")
  categoriaRef    Categoria  @relation(fields: [categoria], references: [nombre])
}

model Categoria {
  id          String     @id @default(cuid())
  nombre      String     @unique
  descripcion String?
  productos   Producto[]
}
